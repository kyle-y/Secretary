<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mf700_03665744"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/a3v"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="联系人"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/text_chat_set_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="马化腾"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="时间"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/text_chat_set_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="20：00"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:id="@+id/button_add_time"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/add_selector"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="对方头像"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/image_chat_set_from"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/menu_4"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="我的头像"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/image_chat_set_to"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/menu_4"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >
            <EditText
                android:id="@+id/text_chat_set_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="对方的话"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:id="@+id/button_add_from"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/add_selector"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >

            <EditText
                android:id="@+id/text_chat_set_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="我的话"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:id="@+id/button_add_to"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/add_selector"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="对方发来红包"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:id="@+id/button_add_wallet_from"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/add_selector"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="我接到红包"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:id="@+id/button_add_wallet_to"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/add_selector"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2b2b2b"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="显示头部"
                android:textColor="#000"
                />
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不显示头部"
                android:textColor="#000"
                />
        </RadioGroup>

    </LinearLayout>
    <Button
        android:id="@+id/button_add_confirm"
        android:layout_width="match_parent"
        android:background="@drawable/a3v"
        android:layout_margin="20dp"
        android:layout_height="50dp"
        android:text="确 认"
        android:textSize="26sp"
        />
</LinearLayout>