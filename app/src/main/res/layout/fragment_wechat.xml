<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b0"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ahe" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信转账截图工具"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下功能是会员专享哦！"
            android:textSize="12sp"
            />

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/button_wallet"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/a9u"
            android:text="微信红包" />

        <Button
            android:id="@+id/button_acount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/a9u"
            android:text="微信转账" />

        <Button
            android:id="@+id/button_getmoney"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/a9u"
            android:text="收款成功" />
    </LinearLayout>
</RelativeLayout>